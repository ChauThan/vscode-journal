{
  "name": "vscode-journal",
  "displayName": "vscode-journal",
  "description": "Lightweight journal and simple notes support for Visual Studio Code",
  "keywords": [
    "journal",
    "diary",
    "notes",
    "memo",
    "date"
  ],
  "version": "0.6.0",
  "publisher": "pajoma",
  "license": "GPL-3.0",
  "engines": {
    "vscode": "^1.16.0"
  },
  "author": {
    "name": "Patrick Mau√©"
  },
  "icon": "img/logo.png",
  "galleryBanner": {
    "color": "#d7eef4",
    "theme": "light"
  },
  "categories": [
    "Other"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/pajoma/vscode-journal.git"
  },
  "bugs": {
    "url": "https://github.com/pajoma/vscode-journal/issues",
    "email": "pajoma@gmail.com"
  },
  "activationEvents": [
    "onCommand:journal.day",
    "onCommand:journal.today",
    "onCommand:journal.yesterday",
    "onCommand:journal.tomorrow",
    "onCommand:journal.note",
    "onCommand:journal.memo",
    "onCommand:journal.open",
    "onLanguage:markdown",
    "onView:journalTasksView"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "journal.test",
        "title": "Tests",
        "category": "Journal"
      },
      {
        "command": "journal.today",
        "title": "Today",
        "category": "Journal"
      },
      {
        "command": "journal.yesterday",
        "title": "Yesterday",
        "category": "Journal"
      },
      {
        "command": "journal.tomorrow",
        "title": "Tomorrow",
        "category": "Journal"
      },
      {
        "command": "journal.memo",
        "title": "Quick Memo",
        "category": "Journal"
      },
      {
        "command": "journal.note",
        "title": "Notes",
        "category": "Journal"
      },
      {
        "command": "journal.day",
        "title": "Enter specific day",
        "category": "Journal"
      },
      {
        "command": "journal.open",
        "title": "Open the Journal",
        "category": "Journal"
      },
      {
        "command": "journal.config",
        "title": "Edit journal templates and configuration",
        "category": "Journal"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "journalTasksView",
          "name": "Tasks (Journal)"
        }
      ]
    },
    "contributes": {
      "markdown.markdownItPlugins": true
    },
    "keybindings": [
      {
        "command": "journal.day",
        "key": "ctrl+shift+j",
        "mac": "cmd+shift+j"
      }
    ],
    "grammars": [
      {
        "scopeName": "text.markdown.journal",
        "path": "./res/syntaxes/journal-markdown.json",
        "injectTo": [
          "text.html.markdown"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Configuration for the Journal extension",
      "properties": {
        "journal.base": {
          "type": "string",
          "default": "",
          "description": "(Mandatatory) The base directory for your notes. "
        },
        "journal.templates-directory": {
          "type": "string",
          "default": "${journalFolder}/.vscode",
          "description": "The base directory for templates and internal configuration. Defaults to '.vscode' within the base directory. "
        },
        "journal.file-patterns": {
          "type": "array",
          "description": "Patterns for filenames and paths",
          "default": [
            {
              "scope": "default.note",
              "path": "${journalFolder}/${date:yyyy}/${date:mm}/${date:dd}/",
              "file": "${input}.md"
            },
            {
              "scope": "default.entry",
              "path": "${journalFolder}/${date:yyyy}/${date:mm}/",
              "file": "dd.md"
            }
          ]
        },
        "journal.inline-templates": {
          "type": "array",
          "description": "Inline templates for tasks, memos and more",
          "default": [
            {
              "scope": "default.note.header",
              "template": "${input}"
            },
            {
              "scope": "default.entry.header",
              "template": "dddd, LL"
            },
            {
              "scope": "default.entry.task",
              "template": "* [ ] ${input}",
              "after": "*Tasks*"
            },
            {
              "scope": "default.entry.memo",
              "template": "* ${input}"
            },
            {
              "scope": "default.entry.file",
              "template": "- NOTE: [{label}]({file})",
              "after": "*Links*"
            }
          ]
        },
  
        "journal.locale": {
          "type": "string",
          "default": "",
          "description": "The locale to use (required for the date format). "
        },
        "journal.dev": {
          "type": "boolean",
          "default": false,
          "description": "If enabled, the features in development will be activated (other features might be broken!!) "
        },
        "journal.openInNewEditorGroup": {
          "type": "boolean",
          "default": true,
          "description": "If true, the journal pages and new notes will split the editor view. "
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "mocha": "3.5.0",
    "moment": "^2.19.1",
    "q": "^1.5.0",
    "typescript": "^2.5.2",
    "vscode": "^1.1.5"
  },
  "dependencies": {
    "moment": "^2.19.1",
    "q": "^1.5.0",
    "vscode-languageclient": "^3.4.2"
  }
}