{
    "scopes": [
        {
            "name": "default",
            "note": {
                "templates": [
                    {
                        "id": "header",
                        "template": "${input}"
                    }
                ],
                "path": "${base}/yyyy/mm/dd/",
                "file": "${input}.md"
            },
            "entry": {
                "templates": [
                    {
                        "id": "header",
                        "template": "dddd, LL"
                    },
                    {
                        "id": "task",
                        "template": "* [ ] ${input}",
                        "after": "*Tasks*"
                    },
                    {
                        "id": "memo",
                        "template": "* ${input}",
                        "after": ""
                    },
                    {
                        "id": "file",
                        "template": "- NOTE: [${name}](${file})",
                        "after": "*Links*"
                    }
                ],
                "path": "${base}/yyyy/mm/",
                "file": "dd.md"
            }
        }
    ]
}