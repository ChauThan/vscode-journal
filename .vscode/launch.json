{
	"version": "0.2.0",
	// List of configurations. Add new configurations or edit existing ones.
	"configurations": [
		{
			"name": "Launch Client",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			// the folders listed here have to be created manually
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}/client"
				,"--extensionHomePath=${workspaceRoot}/../debug/extensions"
				// ,"--user-data-dir=${workspaceRoot}/../debug/user-data"
				,"${workspaceRoot}/../debug/workspace"

			],
			"stopOnEntry": false,
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/client/out/**/*.js"
			],
			"preLaunchTask": "watch:client"
		},
		{
			"name": "Attach to Server",
			"type": "node",
			"request": "attach",
			"port": 6009,
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/client/out/server/**/*.js"
			],
			"protocol": "inspector",
			"preLaunchTask": "watch:server"
		},
		{
			"name": "Launch Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}",
				"--extensionTestsPath=${workspaceRoot}/client/out/test", 
				//"--extensionHomePath=${workspaceRoot}/tests/extensions",
				"${workspaceRoot}/tests/workspace"
			],
			"stopOnEntry": false,
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/client/out/test/**/*.js"
			],
			"preLaunchTask": "watch:client"
		}
	]
}