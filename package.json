{
    "name": "vscode-journal",
    "displayName": "vscode-journal",
    "description": "Lightweight journal and simple notes support for Visual Studio Code",
    "author": {
        "name": "pajoma"
    },
    "icon": "img/logo.png",
    "version": "0.1.0",
    "publisher": "pajoma",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "galleryBanner": {
        "color": "#d7eef4",
        "theme": "dark"
    },
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/pajoma/vscode-journal.git"
    },
    "activationEvents": [
        "onCommand:journal.today",
        "onCommand:journal.yesterday",
        "onCommand:journal.tomorrow",
        "onCommand:journal.note",
        "onCommand:journal.memo"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "journal.today",
                "title": "Today",
                "category": "Journal"
            },
            {
                "command": "journal.yesterday",
                "title": "Yesterday",
                "category": "Journal"
            },
            {
                "command": "journal.tomorrow",
                "title": "Tomorrow",
                "category": "Journal"
            },
            {
                "command": "journal.memo",
                "title": "Quick Memo",
                "category": "Journal"
            },
            {
                "command": "journal.note",
                "title": "Notes",
                "category": "Journal"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "settings for journal",
            "properties": {
                "journal.base": {
                    "type": "string",
                    "default": "enter your base directory here",
                    "description": "The base directory for your notes. "
                },
                "journal.ext": {
                    "type": "string",
                    "default": ".adoc",
                    "description": "The default extension of your notes. "
                },
                "journal.tpl-page": {
                    "type": "string",
                    "default": "= {content} \n\n",
                    "description": "The template string for your daily notes. "
                },
                "journal.tpl-memo": {
                    "type": "string",
                    "default": "*   {content}",
                    "description": "The template string for new memos (new lines). "
                },
                "journal.locale": {
                    "type": "string",
                    "default": "",
                    "description": "The locale to use (required for the date format). "
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "q": "^1.4.1",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}